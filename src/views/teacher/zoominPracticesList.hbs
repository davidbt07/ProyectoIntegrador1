<div class="container">
    <div class="row">
        <div class="presentation mx-auto">
            <h2>Detalles pr&aacute;ctica: {{practice.name}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="mx-auto" style="position:relative; left:-30%; top:10%; color: white">
            <h4>Descripci&oacute;n:</h4><br>
            <label style="color: gray; font-size: 20px" for="">{{practice.description}}</label>
        </div>
    </div>
    <div class="row">
        <div class="mx-auto" style="color: white; position:relative; top: 10%">
            <h2>Equipos reservados</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-10 col-sm-10 col-md-9 col-lg-10 col-xl-10 mx-auto">
            <table class="table table-sm table-dark table-hover" id="tableD">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Dispositivo</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">N&uacute;mero puertos</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each devices}}

                    <tr class="table-active">

                    <td>{{id}}</td>    
                    <td>{{name}}</td>
                    <td>{{type}}</td>
                    <td>{{ports}}</td>

                    <td>

                        <a href="../{{id}}" title="zoominDevice" class="text-decoration-none">

                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle"
                                fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path fill-rule="evenodd"
                                    d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                            </svg>
                        </a>

                    </td>
                </tr>

                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>