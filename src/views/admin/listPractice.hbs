<div class="container">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="text-center">
                <div class="presentation">
                    <h2>Admin {{admin.fullname}}</h2>
                    </br>
                    <h5>Reservas Programadas</h5>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container p-4">
    <div class="col-xs-10 col-sm-10 col-md-9 col-lg-10 col-xl-10 mx-auto">
        <table class="display table-hover table-responsive" id="table_id">
            <thead>
                <tr>

                    <th>Dia</th>
                    <th>Hora de inicio</th>
                    <th>Hora final</th>
                    <th></th>

                </tr>

            </thead>
            <tbody>

                {{#each practices}}

                <tr id="{{id}}">

                    <td>{{day}}</td>
                    <td>{{startHour}}</td>
                    <td>{{endHour}}</td>

                    <td>

                        <a href="/admin/reserve/list/zoomin/{{id}}" title="zoominPractice" class="text-decoration-none">

                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle"
                                fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                <path fill-rule="evenodd"
                                    d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                            </svg>
                        </a>

                        <a onclick="deleteD({{id}})"  title="Eliminar" class="text-decoration-none">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor"
                                xmlns="http://www.w3.org/2000/svg">
                                <path
                                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd"
                                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </a>



                    </td>
                </tr>

                {{/each}}
                
            </tbody>

            <tfoot>
                <tr>
                    <th>Dia</th>
                    <th>Hora de inicio</th>
                    <th>Hora final</th>
                    <th></th>


                </tr>
            </tfoot>
        </table>
    </div>
</div>

<script >

   const deleteD = function(id) {
       $.ajax({
           url: '/admin/reserve/delete/' + id,
            success: function() {
                $(`#${id}`).remove();
            }
       });
   }
</script>