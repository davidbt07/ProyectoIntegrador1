<div class="container">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="text-center">
                <div class="presentation">
                    <h2>ADMIN {{admin.fullname}}</h2>
                    </br>
                    <h5>EDITAR DISPOSITIVO</h5>
                </div>
            </div>
        </div>

    </div>
</div>


<div class="container p-4">
    <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5 col-xl-5 mx-auto">

        <form action="/admin/edits/{{sDevice.id}}" method="post">


            <div class="form-group">
                <div class="form-inline">
                    <label for="state">Estado dispositivo&nbsp;&nbsp;</label>
                    <input type="text" value="{{sDevice.state}}" class="form-control" name="state" id="state"
                        placeholder="Estado" autofocus />
                </div>
            </div>
            <div class="form-group">
                <input type="text" value="{{sDevice.type}}" name="type" id="type" hidden />
            </div>


            <div class="form-group">
                <button class="btn btn-success btn-block">Editar</button>
            </div>

        </form>
    </div>
</div>