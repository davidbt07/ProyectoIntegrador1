<div class="container">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="text-center">
                <div class="presentation">
                    <h2>Estudiante {{student.fullname}}</h2>
                    </br>
                    <h5>DETALLES {{gDevice.name}}</h5>
                </div>
            </div>
        </div>

    </div>
</div>
