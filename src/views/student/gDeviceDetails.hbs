        <div class="form-group">
            <label>Tipo:&nbsp;&nbsp;{{gDevice.gtname}}</label>

        </div>
        <div class="form-group">
            <label for="description">Descripci&oacute;n&nbsp;&nbsp;</label>
            <textarea disabled type="text" class="form-control" rows="3" name="description"
                placeholder="Describir">{{gDevice.description}}</textarea>
        </div>
    </div>
</div>


